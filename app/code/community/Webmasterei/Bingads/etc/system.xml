<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <webmasterei translate="label" module="bingads">
            <label>Webmasterei Extensions</label>
            <sort_order>100</sort_order>
        </webmasterei>
    </tabs>
    <sections>
        <bingads translate="label" module="bingads">
            <label>BingAds UET-Tag</label>
            <tab>webmasterei</tab>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <bingads_configuration translate="label" module="bingads">
                    <label>Bing Property</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <bingads_active translate="label">
                            <label>UET-Tag</label>
                            <comment>Put the BingAds UET-Tag here.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </bingads_active>
                        <uet-tag translate="label">
                            <label>UET-Tag</label>
                            <comment>Put the BingAds UET-Tag here.</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </uet-tag>
                    </fields>
                </bingads_configuration>
            </groups>
        </bingads>
    </sections>
</config>